{
  "name": "polymer-tutorial-game",
  "version": "0.0.1",
  "description": "Polycraft, a Polymer 2.x tutorial game!",
  "directories": {
    "doc": "src",
    "test": "test"
  },
  "devDependencies": {
    "@polymer/gen-closure-declarations": "^0.4.0",
    "@polymer/gen-typescript-declarations": "^1.2.0",
