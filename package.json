    "@polymer/test-fixture": "^3.0.0-pre.12",
    "@webcomponents/webcomponentsjs": "^2.0.0",
    "babel-eslint": "^7.2.3",
    "babel-preset-minify": "^0.2.0",
    "gulp": "^4.0.0",
    "gulp-babel": "^6.1.2",
    "gulp-eslint": "^4.0.0",
    "gulp-if": "^2.0.1",
    "gulp-replace": "^0.6.1",
    "gulp-size": "^3.0.0",
    "gulp-vulcanize": "^7.0.0",
    "lazypipe": "^1.0.1",
    "merge-stream": "^1.0.1",
    "parse5": "^4.0.0",
    "polymer-build": "^2.1.1",
    "polymer-cli": "^1.7.0",
    "bower": "^1.8.4"
  },
  "scripts": {
    "postinstall": "bower install",
